# Claude TUI Environment Configuration
# Copy this file to .env and update with your values

# API Keys (Required)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_FLOW_API_KEY=your_claude_flow_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional, for OpenAI integration

# Claude Code API Configuration
CLAUDE_CODE_OAUTH_TOKEN=your_claude_code_oauth_token_here
CLAUDE_CODE_CLIENT_ID=your_claude_code_client_id
CLAUDE_CODE_CLIENT_SECRET=your_claude_code_client_secret
CLAUDE_CODE_API_BASE_URL=https://api.claude.ai/v1
CLAUDE_CODE_RATE_LIMIT=60  # Requests per minute

# Database Configuration
DATABASE_URL=postgresql://claude_user:secure_password@localhost:5432/claude_tui
REDIS_URL=redis://localhost:6379/0

# Application Configuration
CLAUDE_TUI_ENV=development
SECRET_KEY=generate_a_secure_secret_key_here
LOG_LEVEL=INFO
DEBUG=false

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-domain.com

# Performance
MAX_WORKERS=4
CACHE_TTL=3600

# Monitoring
PROMETHEUS_ENABLED=false
GRAFANA_PASSWORD=admin123

# Development Settings
DEVELOPMENT_MODE=true
AUTO_RELOAD=true

# Production Settings (Override for production)
# CLAUDE_TUI_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# DEVELOPMENT_MODE=false
# AUTO_RELOAD=false

# Docker Compose Settings
POSTGRES_DB=claude_tui
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=secure_password_here

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=webhook_secret_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=claude-tui@your-domain.com

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=claude-tui-backups

# Kubernetes Configuration
KUBE_NAMESPACE=claude-tui
KUBE_CONFIG_PATH=/path/to/kubeconfig