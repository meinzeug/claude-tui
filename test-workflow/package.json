{
  "name": "test-workflow",
  "version": "1.0.0",
  "description": "Advanced test framework with parallel execution, watch mode, and multiple reporters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "test-workflow": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node dist/cli/index.js",
    "test:watch": "node dist/cli/index.js --watch",
    "test:coverage": "node dist/cli/index.js --coverage",
    "test:parallel": "node dist/cli/index.js --parallel",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chokidar": "^3.5.3",
    "glob": "^10.3.0",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-instrument": "^6.0.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.1.5",
    "worker_threads": "^1.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": ["testing", "test-runner", "parallel", "watch", "coverage", "typescript"],
  "author": "Test Workflow Team",
  "license": "MIT"
}