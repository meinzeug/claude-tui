/* Claude-TIU Main Stylesheet */
/* Enhanced Textual CSS for the TUI application */

/* Global Styles */
Screen {
    background: $background;
    color: $text;
}

/* Headers */
.header {
    text-style: bold;
    color: $accent;
    padding: 1;
    margin-bottom: 1;
}

.wizard-header {
    text-align: center;
    text-style: bold;
    color: $primary;
    background: $surface;
    padding: 1;
}

.settings-header {
    text-align: center;
    text-style: bold;
    color: $accent;
    background: $surface;
    padding: 1;
}

.section-header {
    text-style: bold;
    color: $secondary;
    margin-top: 1;
    margin-bottom: 1;
}

.subsection-header {
    text-style: bold;
    color: $text-muted;
    margin-bottom: 1;
}

/* Layout Containers */
.left-panel {
    width: 35%;
    background: $surface;
    border: thick $border;
    padding: 1;
}

.main-panel {
    width: 65%;
    background: $background;
    padding: 1;
}

/* Project Tree Styles */
.project-tree {
    height: 50%;
    border: solid $border;
    scrollbar-gutter: stable;
}

.file-status-validated {
    color: $success;
}

.file-status-placeholder {
    color: $warning;
}

.file-status-error {
    color: $error;
}

.file-status-pending {
    color: $text-muted;
}

/* Progress Intelligence Styles */
.progress-intelligence {
    height: 50%;
    border: solid $border;
    margin-top: 1;
}

.progress-bar-container {
    height: 3;
    margin: 1;
}

.authenticity-high {
    color: $success;
    text-style: bold;
}

.authenticity-medium {
    color: $warning;
    text-style: bold;
}

.authenticity-low {
    color: $error;
    text-style: bold;
}

/* Task Dashboard Styles */
.task-dashboard {
    height: 50%;
    border: solid $border;
    scrollbar-gutter: stable;
}

.task-header {
    text-style: bold;
    color: $text;
    background: $surface;
    padding: 0 1;
}

.task-status {
    color: $text-muted;
    padding: 0 1;
}

.task-eta {
    color: $secondary;
    padding: 0 1;
}

.progress-label {
    width: 8;
    text-align: right;
}

.filter-bar {
    height: 3;
    align: center middle;
    margin: 1;
}

.control-bar {
    height: 3;
    align: center middle;
    margin-top: 1;
}

/* Console Widget Styles */
.console-widget {
    height: 50%;
    border: solid $border;
    margin-top: 1;
}

.console-log {
    height: 1fr;
    scrollbar-gutter: stable;
    background: $surface;
}

.input-area {
    height: 3;
    align: center middle;
}

.status-bar {
    height: 1;
    background: $surface;
    color: $text-muted;
    padding: 0 1;
    text-align: center;
}

/* Notification System Styles */
.notification-toast {
    dock: top;
    height: auto;
    background: $surface;
    border: thick $border;
    margin: 1;
}

.notification-container {
    height: auto;
    padding: 1;
    border: solid $border;
    margin: 1;
}

.notification-header {
    text-style: bold;
    margin-bottom: 1;
}

.notification-message {
    margin-bottom: 1;
    width: 1fr;
}

.notification-actions {
    height: 3;
    align: center middle;
}

.dismiss-button {
    width: 3;
    background: $error;
}

.history-panel {
    dock: right;
    width: 40%;
    background: $surface;
    border: thick $border;
    display: none;
}

.history-header {
    text-style: bold;
    text-align: center;
    color: $accent;
    padding: 1;
    background: $background;
}

.history-controls {
    height: 3;
    align: center middle;
    margin: 1;
}

.toast-overlay {
    dock: top;
    height: auto;
}

/* Placeholder Alert Styles */
.alert-overlay {
    dock: bottom;
    height: auto;
    background: $error 20%;
}

.alert-hidden {
    display: none;
}

.alert-visible {
    display: block;
    background: $warning;
    border: thick $error;
    padding: 1;
    margin: 1;
}

.alert-header {
    text-style: bold;
    color: $error;
    text-align: center;
    margin-bottom: 1;
}

.alert-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

.placeholder-issue {
    border: solid $border;
    margin: 1;
    padding: 1;
    height: auto;
}

.issue-header {
    text-style: bold;
    margin-bottom: 1;
}

.issue-location {
    color: $text-muted;
    margin-bottom: 1;
}

.code-snippet {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
}

.code-snippet-plain {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
    color: $text-muted;
}

.suggestion {
    background: $warning 20%;
    border: solid $warning;
    padding: 1;
    margin: 1;
}

.issue-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

/* Wizard Styles */
#wizard-container {
    background: $background;
    border: thick $border;
    padding: 2;
    margin: 2;
}

.wizard-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

.form-section {
    border: solid $border;
    padding: 1;
    margin: 1;
}

.template-details {
    height: 1fr;
    background: $surface;
    border: solid $border;
    padding: 1;
    margin-top: 1;
}

.preview-panel {
    height: 1fr;
    background: $surface;
    border: solid $border;
    padding: 1;
}

.file-structure {
    height: 1fr;
    background: $surface;
    border: solid $border;
    padding: 1;
    margin-top: 1;
}

/* Settings Styles */
#settings-container {
    background: $background;
    border: thick $border;
    padding: 2;
    margin: 2;
}

.settings-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

.setting-group {
    border: solid $border;
    padding: 1;
    margin: 1;
}

.help-text {
    color: $text-muted;
    text-style: italic;
    margin-bottom: 1;
}

.warning-text {
    color: $warning;
    text-style: italic;
    margin-bottom: 1;
}

/* Validation Styles */
.validation-summary {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
}

.severity-summary {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
}

/* Quality Metrics */
.quality-excellent {
    color: $success;
    text-style: bold;
}

.quality-good {
    color: $primary;
}

.quality-needs-work {
    color: $warning;
}

.quality-poor {
    color: $error;
    text-style: bold;
}

/* Button Variants */
Button.primary {
    background: $primary;
    color: $text;
    text-style: bold;
}

Button.primary:hover {
    background: $primary-darken-1;
}

Button.success {
    background: $success;
    color: $text;
}

Button.success:hover {
    background: $success-darken-1;
}

Button.error {
    background: $error;
    color: $text;
}

Button.error:hover {
    background: $error-darken-1;
}

Button.warning {
    background: $warning;
    color: $text;
}

Button.warning:hover {
    background: $warning-darken-1;
}

/* Modal Styles */
ModalScreen > Container {
    background: $background;
    border: thick $border;
    padding: 2;
}

#alert-modal {
    background: $surface;
    border: thick $error;
    padding: 2;
    margin: 2;
}

.modal-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

#report-container {
    background: $background;
    border: thick $border;
    padding: 2;
    margin: 2;
}

.report-header {
    text-style: bold;
    text-align: center;
    color: $primary;
    padding: 1;
}

.report-actions {
    height: 3;
    align: center middle;
    margin-top: 1;
}

/* Responsive Design - Using display variants instead of media queries */
.left-panel-compact {
    width: 100%;
    height: 40%;
}

.main-panel-compact {
    width: 100%;
    height: 60%;
}

.left-panel-hidden {
    display: none;
}

.main-panel-full {
    width: 100%;
}